<h2>This cow is considered to be armed and extermely dangerous</h2>

  <div class='showCow'>
    <h2>WANTED</h2>
    <div class='cowImage'>
    </div>
    <p>Name: <%= @cow.name %></p>
    <p>Age: <%= @cow.age %></p>
    <%= link_to 'Delete', @cow, method: :delete, data: { confirm: "Are you sure?" } %>

  </div>


<div id='cowAttacks'>
  <h2> This cow has had <%= @attacks.count%> reported attacks </h2>

  <% @attacks.each do |attack| %>
    <% person = Person.find(attack.person_id) %>
    <% cow = Cow.find(attack.cow_id) %>

    <div class='cowAttack'>
      <ul>
        <li><h3>Incident ID: #<%= attack.id %></h3></li>
        <li>--------------------------------</li>
        <li>Location: <%= attack.location %></li>
        <li>Rating: <%= attack.rating %></li>
        <li>Cow Involced: <%=link_to cow.name, cow %> </li>
        <li>Person Involved: <%= link_to person.name, person %></li>
      </ul>
    </div>
  <% end %>
</div>